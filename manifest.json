{
  "name": "划词翻译",
  "version": "1.19.0701.0",
  "description": "虽则如云，匪我思存。",
  "icons": {
      "48": "icon/book_48.png",
      "128": "icon/book_128.png"
  },
  "manifest_version": 2,
  "web_accessible_resources": ["*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "js/util.js"
      ],
      "css": [
        "css/override.css"
      ],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "<all_urls>",
    "contextMenus"
  ]
}