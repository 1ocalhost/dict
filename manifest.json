{
  "name": "划词翻译",
  "version": "0.0.1",
  "description": "虽则如云，匪我思存。",
  "icons": {
      "48": "icon/book_48.png",
      "128": "icon/book_128.png"
  },
  "manifest_version": 2,
  "web_accessible_resources": ["*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "js/util.js",
        "js/youdao.js",
        "js/third_party/vue_d.js",
        "js/content.js"
      ],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "permissions": [
    "<all_urls>",
    "contextMenus"
  ]
}